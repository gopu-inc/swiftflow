// Test simple pour vérifier les fonctionnalités de base

// Variables de base
var x = 10;
var y = 3.14;
var name = "SwiftFlow";
var active = true;

// Variables SYM
net ip = "192.168.1.1";
clog log_msg = "Starting test";
dos data = 1000.50;

// Fonction simple
func greet(person: string) {
    print("Hello, ", person, "!");
}

// Structure de contrôle
func test_control() {
    if (x > 5) {
        print("x is greater than 5");
    } else {
        print("x is 5 or less");
    }
    
    var i = 0;
    while (i < 3) {
        print("While loop: i = ", i);
        i = i + 1;
    }
    
    for (var j = 0; j < 3; j = j + 1) {
        print("For loop: j = ", j);
    }
}

// Opérations
func test_operations() {
    var a = 15;
    var b = 4;
    
    print("a + b = ", a + b);
    print("a - b = ", a - b);
    print("a * b = ", a * b);
    print("a / b = ", a / b);
    print("a == b: ", a == b);
    print("a > b: ", a > b);
}

// Fonction principale
sel main() {
    print("=== STARTING SIMPLE TEST ===");
    
    // Afficher les variables
    print("x = ", x);
    print("y = ", y);
    print("name = ", name);
    print("active = ", active);
    print("ip = ", ip);
    
    // Tester les fonctions
    greet("Developer");
    test_control();
    test_operations();
    
    // Test size()
    print("Size of x: ", size(x));
    print("Size of name: ", size(name));
    print("Size of data: ", size(data));
    
    // Afficher dbvar
    print("\n=== VARIABLE TABLE ===");
    dbvar;
    
    print("\n=== TEST COMPLETED SUCCESSFULLY ===");
    return 0;
}